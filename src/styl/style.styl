@require 'vendorprefix.styl'
@require 'config.styl'

body
  background $background
  font-family 'Open Sans', Helvetica, Arial, sans-serif
  color $dark

h1
  font-size $h1-size

h2
  font-size $h2-size

h3
  font-size $h3-size

h4
  font-size $h4-size

h5
  font-size $h5-size

h6
  font-size $h6-size

h1,h2,h3,h4,h5,h6
  font-weight 800
  letter-spacing -1px
  margin 60px 0
  
a
  outline 0
  text-decoration none
  color $dark
  &:hover
    color alpha($green, 0.8)

p
  font-size $p-size
  line-height $line-height
  margin 40px 0
  
.row > .column.column
  padding $gutter 100px
  
.overlay 
  overflow hidden
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  .row
    height 100vh
    
.overlay
  .background
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    background #323848
    z-index -1
  &.fade
    opacity 0 !important
    transition 1s
    -webkit-transition 1s
    
.overlay
  z-index 100
  .overlay-content
    color #fff
    font-size 160px
    font-weight 800
    letter-spacing -8px
    text-align center
    transform translateY(0)
    transition 1s cubic-bezier(.42, 0, .58, 1)
    -webkit-transition 1s cubic-bezier(.42, 0, .58, 1)
    opacity 1
    &.offset
      transform translateY(70vh)
      opacity 0
    &.slideUp
      transform translateY(-70vh)

section
  transform translateY(100%)
  -webkit-transform translateY(100%)
    
section.fadeUp
  transform translateY(0)
  -webkit-transform translateY(0)
  transition 1s
  -webkit-transition 1s
  
.row>.column.column
  padding $gutter 20px
  @media (min-width 600px)
    padding $gutter 100px
    
  
section
  padding 60px 0
  z-index 10
  
section.intro
  margin-top 40vh
  a 
    color $green
    &:hover
      color alpha($green, 0.8)
  
section.projects
  ul 
    margin 0
    list-style none
    li 
      margin 30px 0
      font-size $p-size
      
section.contact
  p 
    a 
      color $green
      &:hover
        color alpha($green, 0.8)
        
footer
  padding 50px 0
  a 
    font-size 22px
    margin 0 25px
    color alpha($dark, 0.3)
    &:first-of-type
      margin 0 25px 0 0
    &:last-of-type
      margin 0 0 0 25px